@using JD.Invoicing.Web.Models.Common.Modals
@model JD.Invoicing.Web.Models.Customer.EditCustomerModalViewModel
@{
    Layout = null;
}
@Html.Partial("~/Views/Shared/Modals/_ModalHeader.cshtml", new ModalHeaderViewModel(L("EditCustomer")))
<div class="modal-body">
    <form name="CustomerEditForm" role="form" novalidate class="form-validation">
        <input type="hidden" name="Id" value="@Model.Customer.Id" />
        <div>
            <div class="row clearfix">
                <div class="col-sm-6">
                    <div class="form-line">
                        <label class="form-label">@L("Code")</label>
                        <input type="text" name="Code" value="@Model.Customer.Code" class="form-control" required maxlength="50" />
                    </div>
                </div>
                <div class="col-sm-6">
                    <div class="form-line">
                        <label class="form-label">@L("Name")</label>
                        <input type="text" name="Name" value="@Model.Customer.Name" class="form-control" required maxlength="150" />
                    </div>
                </div>
            </div>
            <div class="row clearfix">
                <div class="col-sm-6">
                        <div class="form-line">
                            <label class="form-label">@L("PinyinCode")</label>
                            <input type="text" name="PinyinCode" value="@Model.Customer.PinyinCode" class="form-control" required maxlength="150" />
                        </div>
                </div>
            </div>
            <div class="row clearfix">
                <div class="col-sm-6">
                        <div class="form-line">
                            <label class="form-label">@L("Address")</label>
                            <input type="text" name="Address" value="@Model.Customer.Address" class="form-control" required maxlength="200" />
                        </div>
                </div>
                <div class="col-sm-6">
                        <div class="form-line">
                            <label class="form-label">@L("Contact")</label>
                            <input type="text" name="Contact" value="@Model.Customer.Contact" class="form-control" required maxlength="50" />
                        </div>
                </div>
            </div>
            <div class="row clearfix">
                <div class="col-sm-6">
                        <div class="form-line">
                            <label class="form-label">@L("Phone")</label>
                            <input type="text" name="Phone" value="@Model.Customer.Phone" class="form-control" required maxlength="50" />
                        </div>
                </div>
                <div class="col-sm-6">
                    <div class="form-line">
                        <label class="form-label">@L("Wechat")</label>
                        <input type="text" name="Wechat" value="@Model.Customer.Wechat" class="form-control" required maxlength="50" />
                    </div>
                </div>
            </div>
            <div class="row clearfix">
                <div class="col-sm-6">
                    <div class="form-line">
                        <label class="form-label">@L("Area")</label>
                        <input name="Area" type="text" value="@Model.Customer.Area" class="form-control" required maxlength="50" />
                    </div>
                </div>
                <div class="col-sm-6">
                    <div class="form-line">
                        <label class="form-label">@L("Type")</label>
                        <input name="Type" type="text" value="@Model.Customer.Type" class="form-control" />
                    </div>
                </div>
            </div>
            <div class="col-sm-6">
                <div class="form-line">
                    <label class="form-label">@L("Status")</label>
                    <input name="Status" type="text" value="@Model.Customer.Status" class="form-control" />
                </div>
            </div>
        </div>
        <div class="row clearfix">
            <div class="col-sm-12">
                <div class="form-line">
                    <label class="form-label">@L("Remarks")</label>
                    <input name="Remarks" type="text" value="@Model.Customer.Remarks" class="form-control" required maxlength="200" />
                </div>
            </div>
        </div>
        <div class="row clearfix">
            <div class="col-sm-6">
                <div class="form-line">
                    <label class="form-label">@L("CreateDate")</label>
                    <input name="CreateDate" type="text" value="@Model.Customer.CreateDate" class="form-control" />
                </div>
            </div>
            <div class="col-sm-6">
                <div class="form-line">
                    <label class="form-label">@L("CreateName")</label>
                    <input name="CreateName" type="text" value="@Model.Customer.CreateName" class="form-control" />
                </div>
            </div>
        </div>
        <div class="row clearfix">
            <div class="col-sm-6">
                <div class="form-line">
                    <label class="form-label">@L("UpdateDate")</label>
                    <input name="UpdateDate" type="text" value="@Model.Customer.UpdateDate" class="form-control" />
                </div>
            </div>
            <div class="col-sm-6">
                <div class="form-line">
                    <label class="form-label">@L("UpdateName")</label>
                    <input name="UpdateName" type="text" value="@Model.Customer.UpdateName" class="form-control" />
                </div>
            </div>
        </div>
    </form>
</div>
@Html.Partial("~/Views/Shared/Modals/_ModalFooterWithSaveAndCancel.cshtml")

<script src="~/view-resources/Views/Customer/_EditCustomerModal.js" asp-append-version="true"></script>